<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Jersey Apache Spark</display-name>
    <listener>
        <listener-class>com.laschuet.jersey.spark.ApplicationServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>com.laschuet.jersey.spark.Index</servlet-name>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.laschuet.jersey.spark.Index</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
</web-app>
